---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
const services = [
  "General Maintenance",
  "Oil Change",
  "Brake Service",
  "Tire Service",
  "Engine Diagnostics",
  "Transmission Service",
  "Other",
];
---
<BaseLayout>
  <section class="bg-gradient-to-t from-base-200 to-white">
    <Wrapper variant="standard" class="py-24 lg:py-32">
      <div class="max-w-3xl">
        <Text
          tag="span"
          variant="textSM"
          class="pl-4 font-medium uppercase border-l text-base-900 font-display border-accent-500"
        >
          Book Appointment
        </Text>
        <Text
          tag="h1"
          variant="displayXL"
          class="mt-8 uppercase font-display text-base-900"
        >
          Schedule Your Service
        </Text>
        <Text
          tag="p"
          variant="textBase"
          class="mt-4 text-base-600 text-balance"
        >
          Ready to give your vehicle the care it deserves? Fill out the form
          below, and we'll confirm your appointment shortly.
        </Text>
      </div>
    </Wrapper>
  </section>
  <section>
    <Wrapper variant="standard" class="py-12">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
        <div class="lg:col-span-2">
          <Text
            tag="h2"
            variant="textLG"
            class="text-base-900 font-bold uppercase"
          >
            Appointment Details
          </Text>
          <form class="space-y-8 mt-8">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div class="space-y-2">
                <label
                  for="first-name"
                  class="text-sm font-medium text-base-900 font-display uppercase"
                  >First Name</label
                >
                <input
                  type="text"
                  id="first-name"
                  name="first-name"
                  class="w-full rounded-lg border border-base-200 bg-base-50 px-4 py-3 text-base-900 placeholder:text-base-400 focus:border-accent-500 focus:outline-none focus:ring-1 focus:ring-accent-500 transition-all duration-200"
                  required
                />
              </div>
              <div class="space-y-2">
                <label
                  for="last-name"
                  class="text-sm font-medium text-base-900 font-display uppercase"
                  >Last Name</label
                >
                <input
                  type="text"
                  id="last-name"
                  name="last-name"
                  class="w-full rounded-lg border border-base-200 bg-base-50 px-4 py-3 text-base-900 placeholder:text-base-400 focus:border-accent-500 focus:outline-none focus:ring-1 focus:ring-accent-500 transition-all duration-200"
                  required
                />
              </div>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div class="space-y-2">
                <label
                  for="email"
                  class="text-sm font-medium text-base-900 font-display uppercase"
                  >Email Address</label
                >
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="w-full rounded-lg border border-base-200 bg-base-50 px-4 py-3 text-base-900 placeholder:text-base-400 focus:border-accent-500 focus:outline-none focus:ring-1 focus:ring-accent-500 transition-all duration-200"
                  required
                />
              </div>
              <div class="space-y-2">
                <label
                  for="phone"
                  class="text-sm font-medium text-base-900 font-display uppercase"
                  >Phone Number</label
                >
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  class="w-full rounded-lg border border-base-200 bg-base-50 px-4 py-3 text-base-900 placeholder:text-base-400 focus:border-accent-500 focus:outline-none focus:ring-1 focus:ring-accent-500 transition-all duration-200"
                  required
                />
              </div>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
              <div class="space-y-2">
                <label
                  for="year"
                  class="text-sm font-medium text-base-900 font-display uppercase"
                  >Year</label
                >
                <input
                  type="text"
                  id="year"
                  name="year"
                  placeholder="e.g. 2020"
                  class="w-full rounded-lg border border-base-200 bg-base-50 px-4 py-3 text-base-900 placeholder:text-base-400 focus:border-accent-500 focus:outline-none focus:ring-1 focus:ring-accent-500 transition-all duration-200"
                  required
                />
              </div>
              <div class="space-y-2">
                <label
                  for="make"
                  class="text-sm font-medium text-base-900 font-display uppercase"
                  >Make</label
                >
                <input
                  type="text"
                  id="make"
                  name="make"
                  placeholder="e.g. Toyota"
                  class="w-full rounded-lg border border-base-200 bg-base-50 px-4 py-3 text-base-900 placeholder:text-base-400 focus:border-accent-500 focus:outline-none focus:ring-1 focus:ring-accent-500 transition-all duration-200"
                  required
                />
              </div>
              <div class="space-y-2">
                <label
                  for="model"
                  class="text-sm font-medium text-base-900 font-display uppercase"
                  >Model</label
                >
                <input
                  type="text"
                  id="model"
                  name="model"
                  placeholder="e.g. Camry"
                  class="w-full rounded-lg border border-base-200 bg-base-50 px-4 py-3 text-base-900 placeholder:text-base-400 focus:border-accent-500 focus:outline-none focus:ring-1 focus:ring-accent-500 transition-all duration-200"
                  required
                />
              </div>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div class="space-y-2">
                <label
                  for="service-type"
                  class="text-sm font-medium text-base-900 font-display uppercase"
                  >Service Needed</label
                >
                <select
                  id="service-type"
                  name="service-type"
                  class="w-full rounded-lg border border-base-200 bg-base-50 px-4 py-3 text-base-900 focus:border-accent-500 focus:outline-none focus:ring-1 focus:ring-accent-500 transition-all duration-200 appearance-none"
                  required
                >
                  <option value="" disabled selected>Select a service</option>
                  {
                    services.map((service) => (
                      <option value={service}>{service}</option>
                    ))
                  }
                </select>
              </div>
              <div class="space-y-2">
                <label
                  for="preferred-date"
                  class="text-sm font-medium text-base-900 font-display uppercase"
                  >Preferred Date</label
                >
                <input
                  type="date"
                  id="preferred-date"
                  name="preferred-date"
                  class="w-full rounded-lg border border-base-200 bg-base-50 px-4 py-3 text-base-900 placeholder:text-base-400 focus:border-accent-500 focus:outline-none focus:ring-1 focus:ring-accent-500 transition-all duration-200"
                  required
                />
              </div>
            </div>
            <div class="space-y-2">
              <label
                for="details"
                class="text-sm font-medium text-base-900 font-display uppercase"
                >Additional Details</label
              >
              <textarea
                id="details"
                name="details"
                rows="4"
                class="w-full rounded-lg border border-base-200 bg-base-50 px-4 py-3 text-base-900 placeholder:text-base-400 focus:border-accent-500 focus:outline-none focus:ring-1 focus:ring-accent-500 transition-all duration-200"
                placeholder="Please describe any specific issues or requests..."
              ></textarea>
            </div>
            <Button size="sm" variant="default" type="submit" class="w-fit">
              Request Appointment
            </Button>
          </form>
        </div>
        <!-- Sidebar -->
        <div>
          <aside class="lg:sticky lg:top-32">
            <div
              class="flex flex-col bg-white shadow-2xl rounded-3xl outline-4 outline-base-500/10 divide-y divide-base-500/10"
            >
              <div class="p-6">
                <Text
                  tag="h3"
                  variant="textLG"
                  class="font-medium uppercase font-display text-base-900"
                >
                  Why Choose Copperlane?
                </Text>
                <ul class="mt-6 space-y-4">
                  <li class="flex items-start gap-3">
                    <div
                      class="mt-1.5 size-2 rounded-full bg-accent-500 shrink-0"
                    >
                    </div>
                    <Text tag="span" variant="textBase" class="text-base-600">
                      Certified technicians with years of experience
                    </Text>
                  </li>
                  <li class="flex items-start gap-3">
                    <div
                      class="mt-1.5 size-2 rounded-full bg-accent-500 shrink-0"
                    >
                    </div>
                    <Text tag="span" variant="textBase" class="text-base-600">
                      Transparent pricing and clear communication
                    </Text>
                  </li>
                  <li class="flex items-start gap-3">
                    <div
                      class="mt-1.5 size-2 rounded-full bg-accent-500 shrink-0"
                    >
                    </div>
                    <Text tag="span" variant="textBase" class="text-base-600">
                      Modern diagnostic tools and equipment
                    </Text>
                  </li>
                  <li class="flex items-start gap-3">
                    <div
                      class="mt-1.5 size-2 rounded-full bg-accent-500 shrink-0"
                    >
                    </div>
                    <Text tag="span" variant="textBase" class="text-base-600">
                      Comfortable waiting area with Wi-Fi
                    </Text>
                  </li>
                </ul>
              </div>
              <div class="p-6">
                <Text
                  tag="h3"
                  variant="textLG"
                  class="font-medium uppercase font-display text-base-900"
                >
                  Need Immediate Assistance?
                </Text>
                <Text tag="p" variant="textBase" class="mt-4 text-base-600">
                  For urgent matters or questions, please give us a call
                  directly.
                </Text>
                <div class="mt-6">
                  <a
                    href="tel:+15551234567"
                    class="text-accent-600 font-medium hover:text-accent-700 transition-colors text-lg"
                  >
                    (555) 123-4567
                  </a>
                </div>
              </div>
            </div>
          </aside>
        </div>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
