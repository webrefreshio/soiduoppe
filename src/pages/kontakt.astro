---
// Kontakt - Contact page
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import siteData from "@/data/site.json";

const contact = siteData.contact;
---

<BaseLayout>
  <section class="py-24 bg-base-50">
    <Wrapper variant="standard">
      <div class="max-w-5xl mx-auto">
        <!-- Header -->
        <div class="text-center mb-16">
          <Text tag="h1" variant="displayLG" class="font-display uppercase text-base-900">
            Võta ühendust
          </Text>

          <Text tag="p" variant="textXL" class="mt-6 text-base-700">
            Oleme siin, et aidata! Võta meiega ühendust ja alustame koos
          </Text>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          <!-- Contact Info -->
          <div class="lg:col-span-1 space-y-6">
            <!-- Phone -->
            <div class="bg-white rounded-xl border border-base-200 p-6">
              <div class="flex items-start gap-x-4">
                <div class="flex-shrink-0 w-12 h-12 bg-accent-100 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                </div>

                <div>
                  <Text tag="h3" variant="textLG" class="font-display font-bold text-base-900 mb-2">
                    Telefon
                  </Text>
                  <a href={`tel:${contact.phone}`} class="text-accent-600 hover:text-accent-700 font-medium">
                    {contact.phone}
                  </a>
                </div>
              </div>
            </div>

            <!-- Email -->
            <div class="bg-white rounded-xl border border-base-200 p-6">
              <div class="flex items-start gap-x-4">
                <div class="flex-shrink-0 w-12 h-12 bg-accent-100 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                </div>

                <div>
                  <Text tag="h3" variant="textLG" class="font-display font-bold text-base-900 mb-2">
                    E-post
                  </Text>
                  <a href={`mailto:${contact.email}`} class="text-accent-600 hover:text-accent-700 font-medium break-all">
                    {contact.email}
                  </a>
                </div>
              </div>
            </div>

            <!-- Address -->
            <div class="bg-white rounded-xl border border-base-200 p-6">
              <div class="flex items-start gap-x-4">
                <div class="flex-shrink-0 w-12 h-12 bg-accent-100 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                </div>

                <div>
                  <Text tag="h3" variant="textLG" class="font-display font-bold text-base-900 mb-2">
                    Aadress
                  </Text>
                  <Text tag="p" variant="textBase" class="text-base-600">
                    {contact.address}
                  </Text>
                </div>
              </div>
            </div>

            <!-- Hours -->
            <div class="bg-white rounded-xl border border-base-200 p-6">
              <div class="flex items-start gap-x-4">
                <div class="flex-shrink-0 w-12 h-12 bg-accent-100 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>

                <div>
                  <Text tag="h3" variant="textLG" class="font-display font-bold text-base-900 mb-2">
                    Lahtiolekuajad
                  </Text>
                  <Text tag="p" variant="textBase" class="text-base-600">
                    {contact.hours}
                  </Text>
                </div>
              </div>
            </div>
          </div>

          <!-- Map -->
          <div class="lg:col-span-2">
            <div class="bg-white rounded-xl border border-base-200 p-4 h-full min-h-[500px]">
              <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2091.8962842698896!2d26.72340!3d58.37950!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x46eb36e63fb9c2d5%3A0x7f7f7f7f7f7f7f7f!2sKalda%20tee%2030%2C%20Tartu!5e0!3m2!1sen!2see!4v1234567890"
                width="100%"
                height="100%"
                style="border:0; border-radius: 0.5rem;"
                allowfullscreen
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
                title="Sõiduõppe ABC asukoht kaardil"
              ></iframe>
            </div>
          </div>
        </div>

        <!-- CTA -->
        <div class="mt-12 bg-accent-50 rounded-2xl border-2 border-accent-200 p-8 text-center">
          <Text tag="h2" variant="textXL" class="font-display font-bold text-base-900 mb-4">
            Valmis alustama?
          </Text>

          <Text tag="p" variant="textLG" class="text-base-700 mb-6">
            Vaata meie kursuseid ja registreeru juba täna
          </Text>

          <a
            href="/kursused/"
            class="inline-flex items-center gap-x-2 px-8 py-4 bg-accent-600 text-white rounded-lg hover:bg-accent-700 transition-colors font-medium text-lg"
          >
            Vaata kursuseid
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
