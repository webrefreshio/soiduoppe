          <a href="/kursused/" class="hover:text-accent-600 transition-colors">
            Kursused
          </a>
          <span>/</span>
          <span class="text-base-900 font-medium">
            {course.data.courseCode}
          </span>
        </nav>

        <!-- Course Header -->
        <div class="mb-12">
          <div class="flex items-center gap-x-3 mb-4">
            <span class="inline-flex items-center px-3 py-1 rounded-md bg-accent-100 text-accent-700 text-sm font-mono font-medium">
              {course.data.courseCode}
            </span>

            <span class="inline-flex items-center px-3 py-1 rounded-md bg-base-200 text-base-700 text-sm font-medium">
              {course.data.categoryName}
            </span>
          </div>

          <Text tag="h1" variant="displayLG" class="font-display uppercase text-base-900">
            {course.data.title}
          </Text>

          {course.data.price && (
            <div class="mt-6 inline-flex items-baseline gap-x-2">
              <Text tag="span" variant="textSM" class="text-base-600">
                Hind alates
