---
// Foundations
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
const stats = [
  {
    id: "01",
    title: "Esmakordsest läbimisest",
    value: "76%",
    description:
      "Parim eksamitulemus Transpordiametis - 76% meie õpilastest sooritab eksami esimesel korral.",
  },
  {
    id: "02",
    title: "KIA Ceed",
    value: "100%",
    description:
      "Samad autod, millega Transpordiamet eksamit võtab. Harjud õppimisel õiges autos.",
  },
  {
    id: "03",
    title: "Kannatlik õpetamine",
    value: "24/7",
    description:
      "Teooria õppimise saad läbida online, oma ajakava järgi. Sõidutunnid lepime kokku paindlikult.",
  },
];
---

<section class="relative w-full overflow-hidden lg:h-dvh lg:p-8 ">
  <div class="absolute inset-0 overflow-hidden lg:m-4 lg:rounded-3xl">
    <img
      class="object-cover object-center size-full"
      src="/images/BE3-scaled.webp"
      alt="Sõiduõppe ABC õppeauto"
    />
    <div
      aria-hidden="true"
      class="absolute inset-0 pointer-events-none bg-gradient-to-b from-base-900/70 via-base-900/50 to-base-900/90"
    >
    </div>
  </div>
  <Wrapper
    variant="standard"
    class="relative z-10 flex flex-col gap-y-8 lg:gap-y-0 justify-center h-full pt-32 pb-12 "
  >
    <div class="max-w-4xl">
      <Text
        tag="span"
        variant="textSM"
        class="pl-4 font-medium text-white uppercase border-l font-display border-accent-600"
      >
        Tartu populaarseim moto- ja autokool
      </Text>
      <Text
        tag="h1"
        variant="displayXL"
        class="mt-8 text-white uppercase font-display text-balance"
      >
        Parimate eksamitulemustega juhid tulevad meie autokoolist
      </Text>
    </div>
    <div class="mt-8 mt-auto grid grid-cols-1 md:grid-cols-3 gap-4 gap-y-12">
      {
        stats.map((stat) => (
          <div class="relative group ">
            <span class="absolute -top-10 right-0 text-[110px] font-display font-bold text-white/5 select-none leading-none z-0 transition-colors duration-500 group-hover:text-white/20">
              {stat.value}
            </span>
            <div class="relative z-10 flex flex-col justify-end h-full ">
              <Text
                tag="h3"
                variant="textLG"
                class="pl-4 font-medium uppercase border-l-2 font-display text-base-300 border-accent-500 "
              >
                {stat.title}
              </Text>
              <Text
                tag="p"
                variant="textSM"
                class="mt-4 text-base-400 text-balance"
              >
                {stat.description}
              </Text>
            </div>
          </div>
        ))
      }
    </div>
  </Wrapper>
</section>
