---
// Foundations
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
const stats = [
  {
    id: "01",
    title: "Years in service",
    value: "10+",
    description:
      "Serving the Copperlane community with dedication and honest work for over a decade.",
  },
  {
    id: "02",
    title: "Vehicles serviced",
    value: "5,000+",
    description:
      "From daily drivers to performance cars, we have the experience to handle it all.",
  },
  {
    id: "03",
    title: "Customer rating",
    value: "4.9",
    description:
      "Consistent quality and transparent communication that earns your trust every time.",
  },
];
---

<section class="relative w-full overflow-hidden lg:h-dvh lg:p-8">
  <div class="absolute inset-0 overflow-hidden lg:m-4 lg:rounded-3xl">
    <video
      class="object-cover object-center size-full"
      autoplay
      muted
      loop
      playsinline
    >
      <source src="/videos/car4.mp4" type="video/mp4" />
    </video>
    <div
      aria-hidden="true"
      class="absolute inset-0 pointer-events-none bg-gradient-to-b from-base-900/70 via-base-900/50 to-base-900/90"
    >
    </div>
  </div>
  <Wrapper
    variant="standard"
    class="relative z-10 flex flex-col gap-y-8 lg:gap-y-0 justify-center h-full pt-32 pb-12"
  >
    <div class="max-w-4xl">
      <Text
        tag="span"
        variant="textSM"
        class="pl-4 font-medium text-white uppercase border-l font-display border-accent-600"
      >
        About Copperlane
      </Text>
      <Text
        tag="h1"
        variant="displayLG"
        class="mt-8 text-white uppercase font-display text-balance"
      >
        Independent automotive care, built on craftsmanship and transparency.
      </Text>
    </div>
    <div class="mt-8 mt-auto grid grid-cols-1 md:grid-cols-3 gap-4 gap-y-12">
      {
        stats.map((stat) => (
          <div class="relative group">
            <span class="absolute -top-10 right-0 text-[110px] font-display font-bold text-white/5 select-none leading-none z-0 transition-colors duration-500 group-hover:text-white/20">
              {stat.value}
            </span>
            <div class="relative z-10 flex flex-col justify-end h-full">
              <Text
                tag="h3"
                variant="textLG"
                class="pl-4 font-medium uppercase border-l-2 font-display text-base-300 border-accent-500"
              >
                {stat.title}
              </Text>
              <Text
                tag="p"
                variant="textSM"
                class="mt-4 text-base-400 text-balance"
              >
                {stat.description}
              </Text>
            </div>
          </div>
        ))
      }
    </div>
  </Wrapper>
</section>
