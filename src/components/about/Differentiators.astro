---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
const differentiators = [
  {
    title: "Clear estimates",
    description:
      "Detailed quotes provided and approved before any work begins.",
  },
  {
    title: "Modern diagnostics",
    description:
      "State-of-the-art tools to accurately identify issues the first time.",
  },
  {
    title: "Certified technicians",
    description:
      "Our team is ASE certified and constantly training on new technologies.",
  },
  {
    title: "Warranty-backed repairs",
    description:
      "We stand behind our repairs with a solid warranty for peace of mind.",
  },
  {
    title: "No upsells",
    description: "We recommend what you need, not what boosts our bottom line.",
  },
];
---
<section class="bg-gradient-to-b from-base-200 to-white">
  <Wrapper variant="standard" class="py-24">
    <div class="items-start grid grid-cols-1 lg:grid-cols-3 gap-12">
      <div>
        <Text
          tag="span"
          variant="textSM"
          class="pl-4 font-medium uppercase border-l text-base-900 font-display border-accent-500"
        >
          We are different
        </Text>
        <Text
          tag="h2"
          variant="displayMD"
          class="mt-8 uppercase font-display text-base-900"
        >
          What Makes Copperlane Different
        </Text>
        <Text
          tag="p"
          variant="textBase"
          class="mt-4 text-base-600 text-balance"
        >
          We know you have choices. Here is why our customers keep coming back.
        </Text>
      </div>
      <div class="mt-12 grid grid-cols-1 sm:grid-cols-2 gap-4 lg:col-span-2">
        {
          differentiators.map((item) => (
            <div class="flex flex-col p-6 shadow-2xl pt-42 bg-base-50 rounded-3xl outline-4 outline-base-500/10">
              <Text
                tag="h3"
                variant="textBase"
                class="pl-4 font-medium uppercase border-l-2 font-display text-base-900 border-accent-500 "
              >
                {item.title}
              </Text>
              <Text
                tag="p"
                variant="textXS"
                class="mt-4 text-base-600 text-balance"
              >
                {item.description}
              </Text>
            </div>
          ))
        }
      </div>
    </div>
  </Wrapper>
</section>
