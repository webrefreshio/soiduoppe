---
// Assets
import { Image } from "astro:assets";
import carFront from "@/images/assets/carFront.jpg";
// Foundations
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
---

<section class="bg-gradient-to-b from-base-200 to-white">
  <Wrapper variant="standard" class="py-12 lg:py-24">
    <div
      class="relative p-8 overflow-hidden shadow-2xl rounded-3xl bg-linear-45 from-base-500 to-base-600 lg:p-20 outline-4 outline-base-500/10"
    >
      <Image
        src={carFront}
        alt="Copperlane Shop Front"
        class="absolute inset-0 object-cover size-full"
      />
      <div
        aria-hidden="true"
        class="absolute inset-0 pointer-events-none bg-gradient-to-b from-base-900/70 via-base-900/50 to-base-900/90"
      >
      </div>
      <div
        class="relative items-end grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-16"
      >
        <div>
          <Text
            tag="span"
            variant="textBase"
            class="pl-4 font-medium text-white uppercase border-l border-white font-display"
          >
            Book your appointment
          </Text>
          <Text
            tag="h2"
            variant="displayLG"
            class="mt-12 text-white uppercase font-display"
          >
            Ready to experience the difference?
          </Text>
          <Text tag="p" variant="textBase" class="mt-4 text-base-300">
            Don't wait for a breakdown. Schedule your appointment today and see
            why Copperlane is the trusted choice for automotive care.
          </Text>
        </div>
        <div class="flex flex-col sm:flex-row lg:justify-end gap-4">
          <Button isLink href="/book-appointment" variant="accent" size="xs">
            Book an Appointment
          </Button>
          <Button isLink href="/contact" variant="muted" size="xs">
            Contact Us
          </Button>
        </div>
      </div>
    </div>
  </Wrapper>
</section>
